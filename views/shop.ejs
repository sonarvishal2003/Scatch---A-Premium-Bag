<%- include('./partials/header') %>

<% if(success.length>0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500 z-50">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="w-full min-h-screen flex flex-col md:flex-row px-4 sm:px-6 lg:px-20 py-10 gap-8">
    
    <!-- Sidebar -->
    <div class="w-full md:w-1/4 flex-shrink-0 flex flex-col">
        <div class="flex items-center gap-2 mb-4">
            <h3 class="text-lg font-medium">Sort by</h3>
            <form action="/shop">
                <select class="border px-2 py-1 rounded" name="sortby">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>

        <div class="mt-10">
            <h4 class="text-md font-semibold mb-2">Categories</h4>
            <a class="block mb-2 text-blue-700 hover:underline" href="/shop?category=all">All items</a>
            <a class="block mb-2 text-blue-700 hover:underline" href="/shop?category=new">New Collection</a>
            <a class="block mb-2 text-blue-700 hover:underline" href="/shop?category=discounted">Discounted items</a>
        </div>

        <div class="mt-12">
            <h4 class="text-md font-semibold mb-2">Filter by</h4>
            <a class="block mb-2 text-blue-700 hover:underline" href="#">Availability</a>
            <a class="block mb-2 text-blue-700 hover:underline" href="#">Discount</a>
        </div>
    </div>

    <!-- Product Grid -->
    <div class="w-full md:w-3/4 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-6 overflow-y-auto max-h-screen">
        <% products.forEach(function(item){ %>
            <div class="w-full">
                <div class="w-full h-52 flex items-center justify-center bg-[<%= item.bgcolor %>]">
                    <% if (item.image) { %>
                        <img class="h-[12rem]" src="<%= item.image %>" alt="Product" class="object-contain" />
                    <% } else { %>
                        <p class="text-center text-sm p-2 text-gray-500">No image</p>
                    <% } %>
                </div>
                <div class="flex justify-between bg-[<%= item.panelcolor %>] items-center px-4 py-4 text-[<%= item.textcolor %>]">
                    <div>
                        <h3><%= item.name %></h3>
                        <h4>â‚¹ <%= item.price %></h4>
                    </div>
                    <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white" href="/addtocart/<%= item._id %>">
                        <i class="ri-add-line"></i>
                    </a>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('./partials/footer') %>
